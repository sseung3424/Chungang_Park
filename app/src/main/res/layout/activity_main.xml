<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 지도 프래그먼트를 위한 영역 -->
    <FrameLayout
        android:id="@+id/map_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- 공원 선택 버튼 -->
    <LinearLayout
        android:id="@+id/btn_select_park"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="1000dp"
        android:background="@drawable/rounded_button_shape"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_tree"
            android:contentDescription="공원 선택 이미지" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="공원 선택"
            android:textSize="14sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- 길찾기 버튼 -->
    <LinearLayout
        android:id="@+id/btn_find_path"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="830dp"
        android:background="@drawable/rounded_button_shape"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/pathfinder"
            android:contentDescription="길찾기 이미지" />

        <TextView
            android:id="@+id/btn_find_path_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="길찾기"
            android:textSize="14sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- 주변 정보 안내 버튼 -->
    <LinearLayout
        android:id="@+id/btn_nearby_info"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="720dp"
        android:background="@drawable/rounded_button_shape"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/search"
            android:contentDescription="주변 정보 안내 이미지" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="안내"
            android:textSize="14sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- 취소 버튼 (LinearLayout) -->
    <LinearLayout
        android:id="@+id/btn_cancel_navigation"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button_shape"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_cancel"
        android:contentDescription="취소 버튼 이미지" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="취소"
        android:textSize="14sp"
        android:textColor="#000000" />
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
