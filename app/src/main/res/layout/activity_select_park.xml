<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 안내 문구 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안내받을 공원을 선택하세요."
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 여의도 버튼 -->

    <!-- 잠실 버튼 -->

    <!-- 망원 버튼 -->
    <LinearLayout
        android:id="@+id/btn_mangwon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_button"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_jamsil"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintWidth_percent="0.2">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_tree"
            tools:layout_editor_absoluteX="307dp"
            tools:layout_editor_absoluteY="158dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="망원"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="318dp"
            tools:layout_editor_absoluteY="206dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_yeouido"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_button"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/btn_jamsil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintWidth_percent="0.2">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_tree"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="158dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="여의도"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="206dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_jamsil"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_button"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/btn_mangwon"
        app:layout_constraintStart_toEndOf="@+id/btn_yeouido"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintWidth_percent="0.2">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_tree"
            tools:layout_editor_absoluteX="184dp"
            tools:layout_editor_absoluteY="158dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="잠실"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="195dp"
            tools:layout_editor_absoluteY="206dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

